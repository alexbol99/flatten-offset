    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "@babel/register": "^7.0.0",
    "babel-plugin-istanbul": "^5.1.1",
    "chai": "^4.2.0",
    "coveralls": "^3.0.3",
    "cross-env": "^5.2.0",
    "jsdoc": "^3.5.5",
    "jsdom": "16.5.0",
    "jsdom-global": "2.1.1",
    "minami": "^1.2.3",
    "mocha": "^6.0.2",
    "nyc": "^13.3.0",
    "rollup": "^1.7.3",
    "rollup-plugin-node-resolve": "^4.0.0"
  }
